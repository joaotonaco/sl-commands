{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"outDir": "dist",
		"rootDir": "src",
		"moduleResolution": "Node",
		// "allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"removeComments": false,
		"noImplicitAny": false,
		"importHelpers": true,
		"skipLibCheck": true,
		"declaration": true,
		"strict": true
	},
	"include": ["src", "test/index.test.ts"],
	"exclude": ["test"]
}
