{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": false,
    "importHelpers": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["test"]
}
